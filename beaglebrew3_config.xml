<?xml version="1.0" encoding="ISO-8859-1"?>
<Config>
	<!-- Where the BeagleBrew will be served from -->
    <RootDir>/opt/BeagleBrew3</RootDir>

	<!-- Log config -->
	<LogDir>/var/log/beaglebrew3/</LogDir>
	<LogStatusFile>BeagleBrewStatus</LogStatusFile>
	<LogDataFile>BeagleBrewData</LogDataFile>
	<LogFileMode>Append</LogFileMode> <!-- Setting this to anything else (or removing) will Append -->

	<!-- SQLite3 config -->
	<SQLite3Dir>/var/lib/beaglebrew3/</SQLite3Dir>
	<SQLite3File>beaglebrew.db</SQLite3File>

	<!-- Time format -->
	<!-- Clock (measured in UTC) or Elapsed -->
	<TimeFormat>Elapsed</TimeFormat>

	<!-- If your relay board works inverted (ie, GPIO value 1 = relay off), set to 1 -->
	<GPIO_Inverted>1</GPIO_Inverted>

	<!-- Temperature Sensor Id -->
	<!-- For Temp Control the Temp_Sensor_Id must have a corresponding GPIO Pin used -->
	<!-- for heat, otherwise the temperature sensor is only for temp readout -->
	<!-- Repeat same element names (Temp_Sensor_Id and optional Heat_Pin) for additional temp sensors -->
	<!-- Currently limited to 3 temp sensors but that can easily be expanded in raspibrew.py -->
	<Vessel>My Big Vessel</Vessel>
	<Temp_Sensor_Id>28-000000000000</Temp_Sensor_Id>
	<Heat_Pin>TIMER7</Heat_Pin>

	<!-- Up to 2 GPIO pins are supported but can easily be expanded in code-->
	<!-- Repeat <GPIO_Pin> element name -->
	<GPIO_Pin>TIMER4</GPIO_Pin>

	<!-- Units C (Celsius) or F (Fahrenheit) -->
	<!-- Note: Default is F for Android app which can switch between F and C-->
	<Temp_Units>C</Temp_Units>
</Config>
